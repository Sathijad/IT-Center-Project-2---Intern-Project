{
  "name": "itcenter-admin-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "a11y:test": "jest --runInBand --selectProjects a11y",
    "a11y:test:leave": "jest tests/a11y/leave-a11y.test.tsx tests/a11y/components-a11y.test.tsx",
    "ui:test": "mocha --require ts-node/register --recursive tests/ui/**/*.spec.ts --timeout 60000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "e2e:api": "node mock/server.js",
    "e2e:web": "cross-env VITE_API_BASE_URL=http://localhost:5050 vite --port 5173",
    "e2e:test": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" TS_NODE_TRANSPILE_ONLY=true HEADFUL=false mocha \"tests/ui/**/*.spec.ts\" -r ts-node/esm --timeout 120000",
    "e2e": "concurrently -k -s first \"npm run e2e:api\" \"npm run e2e:web\" \"npm run e2e:test\""
  },
  "dependencies": {
    "@aws-amplify/auth": "^6.0.9",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.0",
    "@hookform/resolvers": "^3.3.2",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/environment": "^29.7.0",
    "@axe-core/react": "^4.11.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.11.0",
    "chai": "^4.3.10",
    "chromedriver": "^141.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.0.1",
    "json-server": "^0.17.4",
    "mocha": "^10.2.0",
    "msw": "^2.11.6",
    "postcss": "^8.4.32",
    "selenium-webdriver": "^4.16.0",
    "ts-jest": "^29.2.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "vitest-axe": "^0.1.0"
  }
}
