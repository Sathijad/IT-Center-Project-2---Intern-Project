{
  "name": "leave-attendance-backend",
  "version": "2.0.0",
  "description": "Leave and Attendance Management API - AWS Lambda",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "sam local start-api",
    "build": "sam build",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "deploy:dev": "sam deploy --config-env dev",
    "deploy:stg": "sam deploy --config-env stg",
    "deploy:prd": "sam deploy --config-env prd"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/client-xray": "^3.700.0",
    "@aws-xray-sdk-core": "^3.8.0",
    "@aws-xray-sdk-postgres": "^3.8.0",
    "aws-serverless-express": "^3.4.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.13.1",
    "pg-pool": "^3.7.0",
    "zod": "^3.24.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/index.js"
    ]
  }
}

