{
  "name": "leave-attendance-backend",
  "version": "3.0.0",
  "description": "Serverless leave and attendance APIs for IT Center Phase 2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "package": "npm run build",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:stg": "serverless deploy --stage stg",
    "deploy:prd": "serverless deploy --stage prd",
    "remove:dev": "serverless remove --stage dev"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.928.0",
    "@aws-sdk/client-ses": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/client-sts": "^3.700.0",
    "@aws-sdk/client-xray": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@aws-sdk/util-dynamodb": "^3.700.0",
    "aws-xray-sdk": "^3.5.2",
    "jose": "^6.1.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.16.3",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.16.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "serverless": "^3.39.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-prune-plugin": "^2.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ]
  }
}
